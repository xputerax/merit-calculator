<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPU Merit Calculator"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button1_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Universiti Awam / Politeknik Premier"
            android:onClick="button1_clicked" />

        <Button
            android:id="@+id/button2_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Politeknik Konvensional / METrO / Kolej Komuniti / ILKA"
            android:onClick="button2_clicked" />

    </LinearLayout>
</LinearLayout>