<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseStreamActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choose_stream_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Stream"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/science_stream_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Science Stream"
            android:onClick="science_stream_button_clicked" />

        <Button
            android:id="@+id/literature_stream_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Arts / Literature / Other Stream"
            android:onClick="literature_stream_button_clicked" />

    </LinearLayout>

</LinearLayout>